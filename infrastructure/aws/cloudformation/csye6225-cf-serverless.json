{
   "AWSTemplateFormatVersion":"2010-09-09",
   "Description":"Cloud Formation Template - CSYE6225 - Creating Lambda serverless stack",
   "Parameters":{
      "LambdaRoleArn":{
         "Type":"String"
      },
      "LambdaS3Bucket":{
         "Type":"String"
      }
   },
   "Resources":{
      "ourSNSTopic":{
         "Type":"AWS::SNS::Topic",
         "Properties":{
            "TopicName":"ForgotPassword",
            "Subscription": [ {
               "Endpoint":{
               "Fn::GetAtt": [
                  "ourLambdaFunction",
                  "Arn"
               ]
            },
            "Protocol": "lambda"
         } ]
         },
         "DependsOn":"ourLambdaFunction"
      },
      "ourLambdaFunction":{
         "Type":"AWS::Lambda::Function",
         "Properties":{
            "FunctionName":"MyLambdaFunction",
            "Handler":"LogEvent::handler",
            "Role":{
               "Ref":"LambdaRoleArn"
            },
            "Code":{
               "S3Bucket":{
                  "Ref":"LambdaS3Bucket"
               },
               "S3Key":"LambdaFunction.zip"
            },
            "Runtime":"java8",
            "Timeout":25
         }
      },
      "ourLambdaResourcePolicy":{
         "Properties":{
            "FunctionName":{
               "Fn::GetAtt": [
                  "ourLambdaFunction",
                  "Arn"
               ]
            },
            "Principal":"sns.amazonaws.com",
            "Action":"lambda:InvokeFunction",
            "SourceArn": {
               "Ref":"ourSNSTopic"
            }
         },
        "Type":"AWS::Lambda::Permission"
      }
   }
}